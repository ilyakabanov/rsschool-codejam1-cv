.b-common-wrap
	max-width 1024px
	width 100%
	margin 0 auto
	position relative

.b-main
	margin 0 -25px
	font-size 0
	&__sidebar,
	&__content
		font-size 16px
		display inline-block
		vertical-align top
		padding 0 25px
	&__sidebar
		width 300px
	&__item
		margin 25px 0
		&_img
			text-align center
	&__img
		border-radius 50%
		display inline-block


.b-heading
	display block
	border-top 1px solid #555
	border-bottom 1px solid #555
	font-size 18px
	font-weight normal
	line-height 30px
	margin-bottom 20px


.b-title
	text-align center

.b-position
	text-align center
	display block
	font-size 13px